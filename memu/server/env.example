# MemU Server Configuration Example
# Copy this file to .env and fill in your values

# Server Settings
MEMU_HOST=0.0.0.0
MEMU_PORT=8000
MEMU_DEBUG=false

# CORS Settings (comma-separated origins)
MEMU_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Memory Settings
MEMU_MEMORY_DIR=./memory
MEMU_ENABLE_EMBEDDINGS=true

# LLM Provider (openai, anthropic, deepseek)
MEMU_LLM_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key_here
MEMU_OPENAI_MODEL=gpt-4

# Anthropic Settings (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MEMU_ANTHROPIC_MODEL=claude-3-sonnet-20240229

# DeepSeek Settings (if using DeepSeek)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
MEMU_DEEPSEEK_MODEL=deepseek-chat

# Task Queue Settings (for future use)
MEMU_ENABLE_TASK_QUEUE=false
MEMU_REDIS_URL=redis://localhost:6379/0

# Authentication Settings (for future use)
MEMU_REQUIRE_AUTH=false
MEMU_SECRET_KEY=your-secret-key-for-production
